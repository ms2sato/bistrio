{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "@server/*": ["server/*"],
      "@bistrio/*": [".bistrio/*"]
    },
    "sourceMap": true,
    "module": "node16",
    "outDir": "dist",
    "strict": true,
    "lib": [
      "dom",
      "es6"
    ],
    "target": "ES2015",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx"
  },
  "include": ["server/**/*","params/**/*", "routes/**/*", "views/**/*", "locales/**/*", "server/types"],
  "exclude": ["node_modules"]
}