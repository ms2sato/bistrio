{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "@server/*": ["server/*"],
      "@bistrio/*": [".bistrio/*"],
      "@isomorphic/*": ["isomorphic/*"]
    },
    "sourceMap": true,
    "module": "node16",
    "outDir": "dist",
    "strict": true,
    "lib": [
      "dom",
      "es6"
    ],
    "target": "ES2015",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx"
  },
  "include": ["server/**/*", "isomorphic/**/*"],
  "exclude": ["dist", "node_modules"]
}